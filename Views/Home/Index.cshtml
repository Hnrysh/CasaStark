@model CasaStark.Models.ListadeUsuarios

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h3>Usuario</h3>
<form asp-action="Submit" method="post">
    <div>
        <label>Nombre:</label>
        <input name="Nombre" class="form-control" />
    </div>
    <div>
        <label>Correo:</label>
        <input name="Correo" class="form-control" />
    </div>
    <div>
        <label>Contraseña:</label>
        <input name="Contrasena" type="password" class="form-control" />
    </div>
    <div>
        <label>Rol:</label>
        <input name="Rol" class="form-control" />
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Guardar usuario</button>
</form>

<h3>Lista de Usuarios</h3>
<div class="user-list-container">
    <table class="table table-striped">
        <thead class="bg-dark text-white">
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Rol</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuarios in Model.ListaUsuarios)
            {
                <tr class="user-row">
                    <td>@usuarios.Id</td>
                    <td>@usuarios.Nombre</td>
                    <td>@usuarios.Correo</td>
                    <td>@usuarios.Rol</td>
                    <td>
                        <form asp-action="Eliminar" method="post" onsubmit="return confirm('¿Estás seguro de eliminar este usuario?');">
                            <input type="hidden" name="Id" value="@usuarios.Id" />
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                            <a href="@Url.Action("Modificar", new { Id = usuarios.Id })" class="btn btn-warning">Editar</a>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .user-list-container {
        background-color: #f5f5f5;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .table {
        background-color: #ffffff;
        border-radius: 5px;
        overflow: hidden;
    }

    .user-row:nth-child(even) {
        background-color: #dcdcdc;
    }

    .user-row:nth-child(odd) {
        background-color: #e8e8e8;
    }

    .table th {
        background-color: #343a40;
    }

    .table th, .table td {
        padding: 10px;
        text-align: center;
    }

    .btn {
        margin-top: 5px;
    }
</style>
